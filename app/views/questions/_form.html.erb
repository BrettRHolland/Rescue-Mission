<%= form_for(@question) do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
  <small class="form-text text-muted">Title must be at least 20 characters.</small>
</div>

<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>
  <small class="form-text text-muted">Description must be at least 50 characters.</small>
</div>

<%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
