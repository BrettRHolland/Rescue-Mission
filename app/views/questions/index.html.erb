<div class="row">
  <div class="col">

    <h1>Questions</h1>

    <% @questions.each do |question| %>
      <div class="card my-4">
        <div class="card-body">
          <h5 class="card-title"><%= question.title %></h5>
          <p class="card-text"><%= truncate(question.description, length: 200) %></p>
          <%= link_to "Learn more", question_answers_path(question), class: "btn btn-secondary btn-sm" %>
        </div>
      </div>
    <% end %>

    <%= link_to 'Create new question', new_question_path, class: "btn btn-primary" %>

  </div>
</div>
